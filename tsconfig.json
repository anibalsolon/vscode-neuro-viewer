{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": [
        "types/**/*.d.ts",
        "extension/**/*",
        "webview/**/*",
        "test/**/*",
    ],
    "exclude": ["node_modules", "dist", ".vscode-test", ".vscode-test-web", ".test_output", ".nyc_output"]
}